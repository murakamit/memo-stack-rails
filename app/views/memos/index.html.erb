<%- provide :subtitle, "Memos" -%>
<h1>Memos#index</h1>

<p><%= link_to "create new memo", new_memo_path %></p>
<p><%= pluralize Memo.count, "memo" %>.<p>
<%- unless @memos.empty? -%>
<%= paginate @memos %>
<table border="1">
  <tr><th>id</th><th>text</th><th>updated_at</th></tr>
  <%- @memos.each do |m| -%>
  <tr><td><%= link_to m.id, m %></td><td><%= link_to m.text, m %></td><td><%= m.updated_at %></td></tr>
  <%- end -%>
</table>
<%= paginate @memos %>
<%- end -%>
